<section id="torch-toolbar">
  <div class="torch-container">
    <%= link "Edit", to: Routes.admin_site_path(@conn, :edit, @site), class: "torch-button" %>
    <%= link "Back", to: Routes.admin_site_path(@conn, :index), class: "torch-button" %>
  </div>
</section>

<section id="torch-header-and-content">
  <div class="torch-container">
    <div class="header">
      <h3>Site Details</h3>
    </div>
    <ul>
      <%= for field <- @fields do %>
        <li><span><%= field %></span>ï¼š<span><%= Map.get(@site, String.to_atom(field)) %></span></li>
      <% end %>
    </ul>
  </div>
</section>
